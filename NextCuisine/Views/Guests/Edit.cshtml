@model NextCuisine.Models.Guest

@{
    ViewData["Title"] = "Edit";
}

  <div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
  <div class="card text-center bg-light mb-3" style="max-width: 29rem;">
    <div class="card-header">Edit Guest</div>
    <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Uid" />

                    <div class="form-floating">
                        <input asp-for="Username" class="form-control" placeholder="User Name"/>
                        <label asp-for="Username" class="control-label">User Name</label>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <p> </p>    
                    <div class="form-floating">
                        <input asp-for="Password" class="form-control" placeholder="Password"/>
                        <label asp-for="Password" class="control-label">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <p> </p>
                    <div class="form-floating">
                        <input asp-for="RecoveryEmail" class="form-control" placeholder="Recovery Email"/>
                        <label asp-for="RecoveryEmail" class="control-label">RecoveryEmail</label>
                        <span asp-validation-for="RecoveryEmail" class="text-danger"></span>
                    </div>
                    <p> </p>
                    <div class="form-group">
                        <input class="btn btn-success" type="submit" value="Save" />
                    </div>
                </form>
            </div>
        </div>
        <p>
            @ViewBag.Status
        </p>
        <div class="text-center">
            <a class="text-info" asp-controller="Profile" asp-action="Index">Back to Profile</a>
            <a class="text-danger" asp-action="Delete">Delete my Account</a>
        </div>
      
    </div>
    </div>
 </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
