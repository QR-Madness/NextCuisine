@model NextCuisine.Models.Guest

@{
    ViewData["Title"] = "Register";
}


<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="card text-center bg-light mb-3" style="max-width: 29rem;">
      <div class="card-header">Register Guest</div>
      <div class="card-body">

          <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             
            <div class="form-floating">
                <input asp-for="Username" class="form-control" id="floatingInput" placeholder="User Name"/>
                <label asp-for="Username" class="control-label">User Name</label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <p> </p>
            <div class="form-floating">
                <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password"/>
                <label asp-for="Password" class="control-label">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <p> </p>
            <div class="form-floating">
                <input asp-for="RecoveryEmail" class="form-control" id="floatingInput" placeholder="RecoveryEmail"/>
                <label asp-for="RecoveryEmail" class="control-label">Recovery Email</label>
                <span asp-validation-for="RecoveryEmail" class="text-danger"></span>
            </div>
            <p> </p>
            <div class="form-group">
                 <button type="submit" value="Create" class="btn btn-outline-dark">Register</button>
            </div>
        </form>
          

      </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
