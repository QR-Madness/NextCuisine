@model GuestUpload

@{
    ViewBag.Title = "Upload";
    Layout = "_Layout";
}

<h2>Upload</h2>

<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken();

    <input asp-for="Title" placeholder="Upload Title" maxlength="80" />
    <input asp-for="ShortDescription" placeholder="Short Description" maxlength="500" />

    <textarea asp-for="Content" placeholder="Write what's on your mind...'">
    </textarea>
    
    <h4>Upload Files</h4>
    <input type="file" name="FileInput"/>

    <button type="submit">Post</button>
    <p>@ViewData["LoadText"]</p>
</form>
