@model GuestUpload

@{
    ViewBag.Title = "Upload";
    Layout = "_Layout";
}

<link type="text/css" rel="stylesheet" href="/css/uploads.css" />

<form method="post" enctype="multipart/form-data" asp-controller="Uploads" asp-action="Create" class="upload-create-form">
    <h2>Create an Upload</h2>

    @Html.AntiForgeryToken()
    <p>@ViewData["LoadText"]</p>

    <input asp-for="Title" placeholder="Upload Title" maxlength="80" class="upload-create-title-input" />
    <br />
    <input asp-for="ShortDescription" placeholder="Write a short Description" maxlength="500" />
    <br />
    <textarea asp-for="Content" placeholder="Write what's on your mind..." rows="15" style="width: 100%;">
    </textarea>

    <div>
        <button type="submit">Post Upload</button>
    </div>

    <h4>Upload Some Files</h4>
    <input type="file" name="FileInput" multiple />

    <h4>Public Visibility</h4>
    <select asp-for="Visibility">
        <option value="Public">Public</option>
        <option value="Private">Private</option>
    </select>
</form>
