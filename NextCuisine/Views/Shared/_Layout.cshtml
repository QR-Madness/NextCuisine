@using Microsoft.CodeAnalysis.CSharp.Syntax
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NextCuisine</title>
    <link rel="stylesheet" href="~/css/morph.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NextCuisine.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NextCuisine</a>

                @if (Context.Session.GetString("uid")?.Length > 0)
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Uploads" asp-action="Index">Public Uploads</a>
                    <a class="navbar-brand" asp-area="" asp-controller="Uploads" asp-action="MyUploads">My Uploads</a>
                    <a class="navbar-brand" asp-area="" asp-controller="Uploads" asp-action="PrivateUploads">Private Uploads</a>
                    <a class="navbar-brand" asp-area="" asp-controller="Uploads" asp-action="Create">New</a>
                    <a style="align-self: center;" asp-area="" asp-controller="Profile" asp-action="Index">
                        &commat;@Context.Session.GetString("username")
                    </a>
                }
                else
                {
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                        <div class="collapse navbar-collapse" id="navbarColor02">
                            <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home
                                        <span class="visually-hidden">(current)</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Guests" asp-action="Login">Login</a>
                                <a class="nav-link" asp-controller="Guests" asp-action="Create">Register</a>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Uploads" asp-action="Index">Uploads</a>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - NextCuisine - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
