@model GuestProfile

@{
    ViewBag.Title = "Edit my Profile";
    Layout = "_Layout";
}

<p> </p>
<h2>Edit my Profile</h2>

<form method="post" asp-controller="Profile" asp-action="EditPost">
    @* Personal Info *@
    <h4>Name</h4>
    <input  asp-for="Name" placeholder="Name" />

    <p> </p>
    <h3>Bio</h3>
    <textarea class="textarea" asp-for="Bio" placeholder="Write a little snippet about yourself.">
        @Model.Bio
    </textarea>

    <p> </p>
    @* Additional Preferences *@
    <h4>Favorite Recipes</h4>
    <textarea class="textarea" asp-for="FavoriteRecipes" placeholder="List some of the good recipes you've come by?">
        @Model.FavoriteRecipes
    </textarea>

    <p> </p>
    <h4>Favorite Snacks</h4>
    <textarea class="textarea" asp-for="FavoriteSnacks" placeholder="What are your go-to snacks?">
        @Model.FavoriteSnacks
    </textarea>

    <p> </p>
    <h4>Good Combos</h4>
    <textarea class="textarea" asp-for="GoodCombos" placeholder="What are some good, or suprising flavor combos you've come across?">
        @Model.GoodCombos
    </textarea>
    <p> </p>
    <div>
        @* Submit *@
        <button class="btn btn-outline-dark" type="submit">Save</button>
    </div>
    
</form>

